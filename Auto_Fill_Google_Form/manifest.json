{
  "manifest_version": 3,
  "name": "Auto Filler",
  "version": "1.0",
  "description": "Automatically fills Google Forms with your saved details.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://docs.google.com/forms/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/forms/*"],
      "js": ["content.js"]
    }
  ]
}

